<Window x:Class="HideFile.Aboutbox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="A propos" Height="200" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Name="AppName"/>
            <TextBlock Name="Version"/>
            <TextBlock Name="Author"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="50" >
            <Button Margin="10" Width="100" Name="OkButton" Click="OkButton_Click" >Ok</Button>
            <Button Margin="10" Width="100" Name="WebsiteButton" Click="WebsiteButton_Click" > Site Web</Button>
        </StackPanel>
        
    </Grid>
</Window>
